<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/evently_logo_image_view"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:importantForAccessibility="no"
        android:src="@drawable/evently_logo"
        app:layout_constraintBottom_toTopOf="@id/onboarding_1_image_view"
        app:layout_constraintEnd_toStartOf="@id/evently_logo_text_view"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        app:tint="@color/light_primary" />

    <TextView
        android:id="@+id/evently_logo_text_view"
        style="@style/LogoTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:chainUseRtl="true"
        app:layout_constraintBottom_toBottomOf="@+id/evently_logo_image_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/evently_logo_image_view"
        app:layout_constraintTop_toTopOf="@+id/evently_logo_image_view" />

    <ImageView
        android:id="@+id/onboarding_1_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:importantForAccessibility="no"
        android:paddingVertical="8dp"
        android:src="@drawable/onboarding_3"
        app:layout_constraintBottom_toTopOf="@id/onboarding_title_text_view"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/evently_logo_image_view"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <TextView
        android:id="@+id/onboarding_title_text_view"
        style="@style/OnboardingTitleTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_title_3"
        app:layout_constraintBottom_toTopOf="@id/onboarding_description_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onboarding_1_image_view"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <TextView
        android:id="@+id/onboarding_description_text_view"
        style="@style/OnboardingDescriptionTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_description_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onboarding_title_text_view"
        app:layout_constraintVertical_chainStyle="spread_inside" />

</androidx.constraintlayout.widget.ConstraintLayout>